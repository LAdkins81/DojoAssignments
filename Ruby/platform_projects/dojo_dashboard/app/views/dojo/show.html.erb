
<h1><%= @thisdojo.branch%></h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h3>Address:<%= @thisdojo.street%></h3>
<h3>City: <%= @thisdojo.city%></h3>
<h3>State:<%= @thisdojo.state%></h3>

<h2>Student Roster</h2>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
      <td>
        <%= link_to "Show", dojo_student_path(@thisdojo, student)%> |
        <%= link_to "Edit", edit_dojo_student_path(@thisdojo, student)%> |
        <%= link_to "Delete", dojo_student_path(@thisdojo, student), data: { method: :delete, confirm: "Are you sure?" }%>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "Home", root_path %> | <%= link_to "Edit", edit_dojo_path(@thisdojo) %> | <%= link_to "Add Student", new_dojo_student_path(@thisdojo) %>
